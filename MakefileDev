test__local_nitro_sol:
	RUST_LOG=debug cargo test -p test-infra --features testing_local_nitro_sol

test__:
	RUST_LOG=debug cargo test -p test-infra --features testing_local_nitro_sol -- node_eth::deploy_contract --nocapture

docker-compose__up:
	cd nitro-testnode; ./test-node.bash --dev

docker-compose__down:
	cd nitro-testnode; docker-compose down

docker-compose__sh:
	cd nitro-testnode; docker-compose run --entrypoint sh geth -

docker-compose__address:
	docker-compose run scripts print-address
